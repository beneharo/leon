				    cine = new JRadioButton();
				    grupoBotones.add(cine);
				    teatro = new JRadioButton();
				    grupoBotones.add(teatro);
				    establecerIdiomaOncePantalla(idioma);
				    music.addActionListener(this);
				    cine.addActionListener(this);
				    teatro.addActionListener(this);
				}
				
