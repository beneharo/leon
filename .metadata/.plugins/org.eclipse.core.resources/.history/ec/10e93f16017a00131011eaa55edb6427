								etiquetas.get(i).diaBarato.setVisible(false);
							}
						}
						if (LaOrotava.isVisible() == true) {
							LaOrotava.setVisible(false);
							ZentralCenter.setVisible(false);
							for (int i = 2; i < 4; i++) {
								etiquetas.get(i).direccion.setVisible(false);
								etiquetas.get(i).municipio.setVisible(false);
								etiquetas.get(i).telefono.setVisible(false);
								etiquetas.get(i).precios.setVisible(false);
								etiquetas.get(i).diaBarato.setVisible(false);
							}
						}
						if (Renoir.isVisible() == true) {
							Renoir.setVisible(false); 
							PuntaLarga.setVisible(false);
							for (int i = 4; i < 6; i++) {
								etiquetas.get(i).direccion.setVisible(false);
								etiquetas.get(i).municipio.setVisible(false);
								etiquetas.get(i).telefono.setVisible(false);
								etiquetas.get(i).precios.setVisible(false);
								etiquetas.get(i).diaBarato.setVisible(false);
							}
