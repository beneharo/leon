				public void crearDocePantalla(int idioma) {
					Cine cine = new Cine();
					ImageIcon imagen = new ImageIcon();
					for (int i = 0; i < 7; i++) {
						switch (i) {
							case 0: {
								try {
									cine = new Cine("Alcampo");
									imagen = new ImageIcon(getClass().getResource("/imagenes/Alcampo.jpg"));
									foto.add(imagen);
									Cines.add(cine);
									
								} catch (Exception e1) {
									
								}
								break;
							}
							case 1: {
								try {
									cine = new Cine("Meridiano");
									imagen = new ImageIcon(getClass().getResource("/imagenes/Meridiano.jpg"));
									foto.add(imagen);
									Cines.add(cine);
								} catch (Exception e1) {
									
								}
								break;
							} 
							case 2: {
								try {
									cine = new Cine("La Orotava");
									imagen = new ImageIcon(getClass().getResource("/imagenes/LaOrotava.jpg"));
									foto.add(imagen);
									Cines.add(cine);
								} catch (Exception e1) {
									
								}
								break;
								
							}
							case 3: {
								try {
									cine = new Cine("Zentral Center");
									imagen = new ImageIcon(getClass().getResource("/imagenes/ZentralCenter.jpg"));
									foto.add(imagen);
									Cines.add(cine);
								} catch (Exception e1) {
									
								}
								break;
							}
							case 4: {
								try {
									cine = new Cine("Renoir");
									imagen = new ImageIcon(getClass().getResource("/imagenes/Renoir.jpg"));
									foto.add(imagen);
									Cines.add(cine);
								} catch (Exception e1) {
									
								}
								break;
							}
							case 5: {
								try {
									cine = new Cine("Punta Larga");
									imagen = new ImageIcon(getClass().getResource("/imagenes/PuntaLarga.jpg"));
									foto.add(imagen);
									Cines.add(cine);	
								} catch (Exception e1) {
									
								}
								break;
							}
							case 6: {
								try {
									cine = new Cine("Gran Sur");
									imagen = new ImageIcon(getClass().getResource("/imagenes/GranSur.jpg"));
									foto.add(imagen);
									Cines.add(cine);	
								} catch (Exception e1) {
									
								}
								break;
							}
						}
					}
					crearBotonesCine();
					crearEtiquetasCine();
					for (int i = 0; i < 7; i++) {
						EtiquetasCine etiqueta = new EtiquetasCine();
						etiquetas.add(etiqueta);
					}
					establecerIdiomaDocePantalla(idioma);
				}
				
				public void establecerIdiomaDocePantalla(int idioma) {
					if (idioma == 0) {
						for (int i = 0; i < 7; i++) {
							etiquetas.get(i).setDireccion("Direccion: " + Cines.get(i).direccion);
							etiquetas.get(i).setMunicipio("Municipio: " + Cines.get(i).municipio);
							etiquetas.get(i).setTelefono("Telnnfono: " + Cines.get(i).telefono);
							etiquetas.get(i).setPrecio("Precio: " + Cines.get(i).precio);
							etiquetas.get(i).setDiaBarato("Dia del espectador: " + Cines.get(i).diaBarato);
						}
					}
					else if (idioma == 1) {
						for (int i = 0; i  < 7; i++) {
							etiquetas.get(i).setDireccion("Address: " + Cines.get(i).direccion);
							etiquetas.get(i).setMunicipio("Municipality: " + Cines.get(i).municipio);
							etiquetas.get(i).setTelefono("Phone: " + Cines.get(i).telefono);
							etiquetas.get(i).setPrecio("Price: " + Cines.get(i).precio);
							etiquetas.get(i).setDiaBarato("Discount day: " + Cines.get(i).diaBarato);
						}
					} else if (idioma == 2) {
						for (int i = 0; i  < 7; i++) {
							etiquetas.get(i).setDireccion("Anschrift: " + Cines.get(i).direccion);
							etiquetas.get(i).setMunicipio("Gemeindebezirk: " + Cines.get(i).municipio);
							etiquetas.get(i).setTelefono("telefonieren: " + Cines.get(i).telefono);
							etiquetas.get(i).setPrecio("Preis: " + Cines.get(i).precio);
							etiquetas.get(i).setDiaBarato("Tag des Betrachters: " + Cines.get(i).diaBarato);
						}
					} else if (idioma == 3) {
						for (int i = 0; i  < 7; i++) {
							etiquetas.get(i).setDireccion("Adresse: " + Cines.get(i).direccion);
							etiquetas.get(i).setMunicipio("Municipalitnn: " + Cines.get(i).municipio);
							etiquetas.get(i).setTelefono("Tnnlnnphone: " + Cines.get(i).telefono);
							etiquetas.get(i).setPrecio("Prix: " + Cines.get(i).precio);
							etiquetas.get(i).setDiaBarato("jour du spectateur: " + Cines.get(i).diaBarato);
						}
					}
				}
				
				public void crearBotonesCine() {
					Alcampo = new JRadioButton("Alcampo");
					Meridiano = new JRadioButton("Meridiano");
					LaOrotava = new JRadioButton ("La Orotava");
					ZentralCenter = new JRadioButton ("Zentral Center");
					Renoir = new JRadioButton ("Renoir");
					PuntaLarga = new JRadioButton("Punta Larga");
					GranSur = new JRadioButton ("Gran Sur");
					Alcampo.addActionListener(this);
					Meridiano.addActionListener(this);
					LaOrotava.addActionListener(this);
					ZentralCenter.addActionListener(this);
					Renoir.addActionListener(this);
					PuntaLarga.addActionListener(this);
					GranSur.addActionListener(this);
				}
				
				public void crearEtiquetasCine() {
					primera = new JButton("1");
					segunda = new JButton("2");
					tercera = new JButton("3");
					cuarta = new JButton ("4");
					primera.setOpaque(true);
					primera.setBorder(null);
					Color c = UIManager.getLookAndFeel().getDefaults().getColor( "Panel.background");
					primera.setBackground(new Color(c.getRed(), c.getGreen(), c.getBlue()));
					segunda.setOpaque(true);
					segunda.setBorder(null);
					segunda.setBackground(new Color(c.getRed(), c.getGreen(), c.getBlue()));
					tercera.setOpaque(true);
					tercera.setBorder(null);
					tercera.setBackground(new Color(c.getRed(), c.getGreen(), c.getBlue()));
					cuarta.setOpaque(true);
					cuarta.setBorder(null);
					cuarta.setBackground(new Color(c.getRed(), c.getGreen(), c.getBlue()));
					primera.addActionListener(this);
					segunda.addActionListener(this);
					tercera.addActionListener(this);
					cuarta.addActionListener(this);
				}
				
				public void visualizarDocePantalla() {
					for (int i = 0; i < etiquetas.size(); i++) {
					etiquetas.get(i).direccion.setVisible(true);
					etiquetas.get(i).municipio.setVisible(true);
					etiquetas.get(i).telefono.setVisible(true);
					etiquetas.get(i).precios.setVisible(true);
					etiquetas.get(i).diaBarato.setVisible(true);
					}
					Alcampo.setVisible(true);
					Meridiano.setVisible(true);
					LaOrotava.setVisible(true);
					ZentralCenter.setVisible(true);
					Renoir.setVisible(true);
					GranSur.setVisible(true);
					primera.setVisible(true);
					segunda.setVisible(true);
					tercera.setVisible(true);
					cuarta.setVisible(true);
				}
				
				public void ocultarDocePantalla() {
					for (int i = 0; i < etiquetas.size(); i++) {
						etiquetas.get(i).direccion.setVisible(false);
						etiquetas.get(i).municipio.setVisible(false);
						etiquetas.get(i).telefono.setVisible(false);
						etiquetas.get(i).precios.setVisible(false);
						etiquetas.get(i).diaBarato.setVisible(false);
					}
					Alcampo.setVisible(false);
					Meridiano.setVisible(false);
					LaOrotava.setVisible(false);
					PuntaLarga.setVisible(false);
					ZentralCenter.setVisible(false);
					Renoir.setVisible(false);
					GranSur.setVisible(false);
					primera.setVisible(false);
					segunda.setVisible(false);
					tercera.setVisible(false);
					cuarta.setVisible(false);
				}
				
				public void comprobarVisibilidadBotonesCine(int pant) {
					if (pant == 1) {
						Alcampo.setVisible(true);
						Meridiano.setVisible(true);
						for (int i = 0; i < 2; i++) {
							etiquetas.get(i).direccion.setVisible(true);
							etiquetas.get(i).municipio.setVisible(true);
							etiquetas.get(i).telefono.setVisible(true);
							etiquetas.get(i).precios.setVisible(true);
							etiquetas.get(i).diaBarato.setVisible(true);
						}
						if (LaOrotava.isVisible() == true) {
							LaOrotava.setVisible(false);
							ZentralCenter.setVisible(false);
							for (int i = 2; i < 4; i++) {
								etiquetas.get(i).direccion.setVisible(false);
								etiquetas.get(i).municipio.setVisible(false);
								etiquetas.get(i).telefono.setVisible(false);
								etiquetas.get(i).precios.setVisible(false);
								etiquetas.get(i).diaBarato.setVisible(false);
							}
						}
						if (Renoir.isVisible() == true) {
							Renoir.setVisible(false); 
							PuntaLarga.setVisible(false);
							for (int i = 4; i < 6; i++) {
								etiquetas.get(i).direccion.setVisible(false);
								etiquetas.get(i).municipio.setVisible(false);
								etiquetas.get(i).telefono.setVisible(false);
								etiquetas.get(i).precios.setVisible(false);
								etiquetas.get(i).diaBarato.setVisible(false);
							}
						}
						if (GranSur.isVisible() == true) {
							GranSur.setVisible(false);
							for (int i = 6; i < 7; i++) {
								etiquetas.get(i).direccion.setVisible(false);
								etiquetas.get(i).municipio.setVisible(false);
								etiquetas.get(i).telefono.setVisible(false);
								etiquetas.get(i).precios.setVisible(false);
								etiquetas.get(i).diaBarato.setVisible(false);
							}
						}
					} else if (pant == 2) {
						for (int i = 2; i < 4; i++) {
							etiquetas.get(i).direccion.setVisible(true);
							etiquetas.get(i).municipio.setVisible(true);
							etiquetas.get(i).telefono.setVisible(true);
							etiquetas.get(i).precios.setVisible(true);
							etiquetas.get(i).diaBarato.setVisible(true);
						}
						LaOrotava.setVisible(true);
						ZentralCenter.setVisible(true);
						if (Alcampo.isVisible() == true) { 
							Alcampo.setVisible(false);
							Meridiano.setVisible(false);
							for (int i = 0; i < 2; i++) {
								etiquetas.get(i).direccion.setVisible(false);
								etiquetas.get(i).municipio.setVisible(false);
								etiquetas.get(i).telefono.setVisible(false);
								etiquetas.get(i).precios.setVisible(false);
								etiquetas.get(i).diaBarato.setVisible(false);
							}
						}
						if (Renoir.isVisible() == true) {
							Renoir.setVisible(false);
							PuntaLarga.setVisible(false);
							for (int i = 4; i < 6; i++) {
								etiquetas.get(i).direccion.setVisible(false);
								etiquetas.get(i).municipio.setVisible(false);
								etiquetas.get(i).telefono.setVisible(false);
								etiquetas.get(i).precios.setVisible(false);
								etiquetas.get(i).diaBarato.setVisible(false);
							}
						}
						if (GranSur.isVisible() == true) {
							GranSur.setVisible(false);
							for (int i = 6; i < 7; i++) {
								etiquetas.get(i).direccion.setVisible(false);
								etiquetas.get(i).municipio.setVisible(false);
								etiquetas.get(i).telefono.setVisible(false);
								etiquetas.get(i).precios.setVisible(false);
								etiquetas.get(i).diaBarato.setVisible(false);
							}
						}
					} else if (pant == 3) {
						for (int i = 4; i < 6; i++) {
							etiquetas.get(i).direccion.setVisible(true);
							etiquetas.get(i).municipio.setVisible(true);
							etiquetas.get(i).telefono.setVisible(true);
							etiquetas.get(i).precios.setVisible(true);
							etiquetas.get(i).diaBarato.setVisible(true);
						}
						Renoir.setVisible(true);
						PuntaLarga.setVisible(true);
						if (Alcampo.isVisible() == true) { 
							Alcampo.setVisible(false);
							Meridiano.setVisible(false);
							for (int i = 0; i < 2; i++) {
								etiquetas.get(i).direccion.setVisible(false);
								etiquetas.get(i).municipio.setVisible(false);
								etiquetas.get(i).telefono.setVisible(false);
								etiquetas.get(i).precios.setVisible(false);
								etiquetas.get(i).diaBarato.setVisible(false);
							}
						}
						if (LaOrotava.isVisible() == true) {
							LaOrotava.setVisible(false);
							ZentralCenter.setVisible(false);
							for (int i = 2; i < 4; i++) {
								etiquetas.get(i).direccion.setVisible(false);
								etiquetas.get(i).municipio.setVisible(false);
								etiquetas.get(i).telefono.setVisible(false);
								etiquetas.get(i).precios.setVisible(false);
								etiquetas.get(i).diaBarato.setVisible(false);
							}
						}
						if (GranSur.isVisible() == true) {
							GranSur.setVisible(false);
							for (int i = 6; i < 7; i++) {
								etiquetas.get(i).direccion.setVisible(false);
								etiquetas.get(i).municipio.setVisible(false);
								etiquetas.get(i).telefono.setVisible(false);
								etiquetas.get(i).precios.setVisible(false);
								etiquetas.get(i).diaBarato.setVisible(false);
							}
						}
					} else if (pant == 4) {
						for (int i = 6; i < 7; i++) {
							etiquetas.get(i).direccion.setVisible(true);
							etiquetas.get(i).municipio.setVisible(true);
							etiquetas.get(i).telefono.setVisible(true);
							etiquetas.get(i).precios.setVisible(true);
							etiquetas.get(i).diaBarato.setVisible(true);
						}
						GranSur.setVisible(true);
						if (Alcampo.isVisible() == true) {
							Alcampo.setVisible(false);
							Meridiano.setVisible(false);
							for (int i = 0; i < 2; i++) {
								etiquetas.get(i).direccion.setVisible(false);
								etiquetas.get(i).municipio.setVisible(false);
