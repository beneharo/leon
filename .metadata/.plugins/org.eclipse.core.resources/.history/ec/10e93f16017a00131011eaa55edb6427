					}
				}
				
				public void crearTrecePantalla(int idioma) {
					ImageIcon imagen = new ImageIcon();
					EtiquetasPeliculas etiqueta;
					etiquetaspeliculas = new ArrayList<EtiquetasPeliculas>();
					for (int i = 0; i < pelicula.size(); i++) {
						etiqueta = new EtiquetasPeliculas();
						try {
							URL url = new URL(pelicula.get(i).getFoto());
				    		Image picture = ImageIO.read(url);
			    	        etiqueta.setFoto(picture);
						} catch (IOException e) {
							// TODO Auto-generated catch block
							e.printStackTrace();
						}
						etiqueta.setTitulo(pelicula.get(i).titulo_pelicula);
						etiqueta.setHorarios(pelicula.get(i).horarios);
						etiqueta.setDuracion(pelicula.get(i).duracion);
						etiqueta.setAptaPara(pelicula.get(i).aptaPara);
						etiqueta.setFormato(pelicula.get(i).formato);
						etiqueta.setPais(pelicula.get(i).pais);
						etiquetaspeliculas.add(etiqueta);
					}
					crearBotonesPeliculas();
					crearEtiquetasCine();
					//establecerIdiomaTrecePantalla(idioma);
				}
				
				public void establecerIdiomaTrecePantalla(int idioma) {
					if (idioma == 0) {
						for (int i = 0; i < pelicula.size(); i++) {
							// se podria pasar el pais y tener un arraylist con los distintos paises para traducir
							etiquetaspeliculas.get(i).setPais(pelicula.get(i).pais);
						}
					}
					else if (idioma == 1) {
						for (int i = 0; i < pelicula.size(); i++) {
							// se podria pasar el pais y tener un arraylist con los distintos paises para traducir
							etiquetaspeliculas.get(i).setPais(pelicula.get(i).pais);
						}
						
					} else if (idioma == 2) {
						for (int i = 0; i < pelicula.size(); i++) {
							// se podria pasar el pais y tener un arraylist con los distintos paises para traducir
							etiquetaspeliculas.get(i).setPais(pelicula.get(i).pais);
						}
					} else if (idioma == 3) {
						for (int i = 0; i < pelicula.size(); i++) {
							// se podria pasar el pais y tener un arraylist con los distintos paises para traducir
							etiquetaspeliculas.get(i).setPais(pelicula.get(i).pais);
						}
					}
				}
				
				public void crearBotonesPeliculas() {
					JRadioButton boton;
					botonesPeliculas = new ArrayList<JRadioButton>();
					for (int i = 0; i < pelicula.size(); i++) {
						boton = new JRadioButton(pelicula.get(i).titulo_pelicula);
						boton.addActionListener(this);
						botonesPeliculas.add(boton);
					}
				}
				
				
				
				public void visualizarTrecePantalla() {
					for (int i = 0; i < etiquetaspeliculas.size(); i++) {
						etiquetaspeliculas.get(i).titulo.setVisible(true);
						etiquetaspeliculas.get(i).horarios.setVisible(true);
						etiquetaspeliculas.get(i).duracion.setVisible(true);
						etiquetaspeliculas.get(i).aptaPara.setVisible(true);
						etiquetaspeliculas.get(i).formato.setVisible(true);
						etiquetaspeliculas.get(i).pais.setVisible(true);
						botonesPeliculas.get(i).setVisible(true);
					}
					primera.setVisible(true);
					segunda.setVisible(true);
					tercera.setVisible(true);
					cuarta.setVisible(true);
				}
				
				public void ocultarTrecePantalla() {
					for (int i = 0; i < etiquetaspeliculas.size(); i++) {
						etiquetaspeliculas.get(i).titulo.setVisible(false);
						etiquetaspeliculas.get(i).horarios.setVisible(false);
						etiquetaspeliculas.get(i).duracion.setVisible(false);
						etiquetaspeliculas.get(i).aptaPara.setVisible(false);
						etiquetaspeliculas.get(i).formato.setVisible(false);
						etiquetaspeliculas.get(i).pais.setVisible(false);
						botonesPeliculas.get(i).setVisible(false);
					}
					primera.setVisible(false);
					segunda.setVisible(false);
					tercera.setVisible(false);
					cuarta.setVisible(false);
				}
				
				public void comprobarVisibilidadBotonesPeliculas(int pant) {
					if (pant == 1) {
						for (int i = 0; i < 5; i++) {
							if (i < 5) {
								etiquetaspeliculas.get(i).titulo.setVisible(true);
								etiquetaspeliculas.get(i).horarios.setVisible(true);
								etiquetaspeliculas.get(i).duracion.setVisible(true);
								etiquetaspeliculas.get(i).aptaPara.setVisible(true);
								etiquetaspeliculas.get(i).formato.setVisible(true);
								etiquetaspeliculas.get(i).pais.setVisible(true);
								botonesPeliculas.get(i).setVisible(true);
							} else {
								etiquetaspeliculas.get(i).titulo.setVisible(false);
								etiquetaspeliculas.get(i).horarios.setVisible(false);
								etiquetaspeliculas.get(i).duracion.setVisible(false);
								etiquetaspeliculas.get(i).aptaPara.setVisible(false);
								etiquetaspeliculas.get(i).formato.setVisible(false);
								etiquetaspeliculas.get(i).pais.setVisible(false);
								botonesPeliculas.get(i).setVisible(false);
							}
						}
					} else if (pant == 2) {
						for (int i = 0; i < 5; i++) {
							if (i >= 5 && i < 10) {
								etiquetaspeliculas.get(i).titulo.setVisible(true);
								etiquetaspeliculas.get(i).horarios.setVisible(true);
								etiquetaspeliculas.get(i).duracion.setVisible(true);
								etiquetaspeliculas.get(i).aptaPara.setVisible(true);
								etiquetaspeliculas.get(i).formato.setVisible(true);
								etiquetaspeliculas.get(i).pais.setVisible(true);
								botonesPeliculas.get(i).setVisible(true);
							} else {
								etiquetaspeliculas.get(i).titulo.setVisible(false);
								etiquetaspeliculas.get(i).horarios.setVisible(false);
								etiquetaspeliculas.get(i).duracion.setVisible(false);
								etiquetaspeliculas.get(i).aptaPara.setVisible(false);
								etiquetaspeliculas.get(i).formato.setVisible(false);
								etiquetaspeliculas.get(i).pais.setVisible(false);
								botonesPeliculas.get(i).setVisible(false);
							}
						}
					} else if (pant == 3) {
						for (int i = 0; i < 5; i++) {
							if (i >= 10 && i < 15) {
								etiquetaspeliculas.get(i).titulo.setVisible(true);
								etiquetaspeliculas.get(i).horarios.setVisible(true);
								etiquetaspeliculas.get(i).duracion.setVisible(true);
								etiquetaspeliculas.get(i).aptaPara.setVisible(true);
								etiquetaspeliculas.get(i).formato.setVisible(true);
								etiquetaspeliculas.get(i).pais.setVisible(true);
								botonesPeliculas.get(i).setVisible(true);
							} else {
								etiquetaspeliculas.get(i).titulo.setVisible(false);
								etiquetaspeliculas.get(i).horarios.setVisible(false);
								etiquetaspeliculas.get(i).duracion.setVisible(false);
								etiquetaspeliculas.get(i).aptaPara.setVisible(false);
								etiquetaspeliculas.get(i).formato.setVisible(false);
								etiquetaspeliculas.get(i).pais.setVisible(false);
								botonesPeliculas.get(i).setVisible(false);
							}
						}
					} else if (pant == 4) {
						for (int i = 0; i < 5; i++) {
							if (i>= 15 && i <=18) {
								etiquetaspeliculas.get(i).titulo.setVisible(true);
								etiquetaspeliculas.get(i).horarios.setVisible(true);
								etiquetaspeliculas.get(i).duracion.setVisible(true);
								etiquetaspeliculas.get(i).aptaPara.setVisible(true);
								etiquetaspeliculas.get(i).formato.setVisible(true);
								etiquetaspeliculas.get(i).pais.setVisible(true);
								botonesPeliculas.get(i).setVisible(true);
							} else {
								etiquetaspeliculas.get(i).titulo.setVisible(false);
								etiquetaspeliculas.get(i).horarios.setVisible(false);
								etiquetaspeliculas.get(i).duracion.setVisible(false);
								etiquetaspeliculas.get(i).aptaPara.setVisible(false);
								etiquetaspeliculas.get(i).formato.setVisible(false);
								etiquetaspeliculas.get(i).pais.setVisible(false);
								botonesPeliculas.get(i).setVisible(false);
							}
						}
						
					}
				}
	
	public void actionPerformed(ActionEvent e) {
        if (e.getSource()==espannol && idioma != 0) { 
            idioma = 0;
            cambiarToolTipText ();
        	cambiarIdiomaPerfil ();
        	cambiarValorJLabel();
        	cambiarAparienciaBotonSonido();
        	establecerIdiomaTexto(idioma);
        	establecerIdiomaTerceraPantalla (idioma);
        	establecerIdiomaEtiquetaPreferencias (idioma);
        	editarBotonProponerPlanes (idioma);
        	establecerIdiomaCuartaPantalla(idioma);
        	establecerIdiomaQuintaSextaPantalla(idioma,numeroPantalla);
        	establecerIdiomaSeptimaPantalla(idioma);
        	establecerIdiomaOctavaPantalla(idioma);
        	establecerIdiomaNovenaPantalla(idioma);
        	establecerIdiomaDecimaPantalla(idioma);
        	establecerIdiomaOncePantalla(idioma);
        	establecerIdiomaDocePantalla(idioma);
        	//establecerIdiomaTrecePantalla(idioma);
        }
        else if (e.getSource()==ingles && idioma != 1) {
        	idioma = 1;
        	cambiarToolTipText ();
        	cambiarIdiomaPerfil ();
        	cambiarValorJLabel();
        	cambiarAparienciaBotonSonido();
        	establecerIdiomaTexto(idioma);
        	establecerIdiomaTerceraPantalla (idioma);
        	establecerIdiomaEtiquetaPreferencias (idioma);
        	editarBotonProponerPlanes (idioma);
        	establecerIdiomaCuartaPantalla(idioma);
        	establecerIdiomaQuintaSextaPantalla(idioma,numeroPantalla);
        	establecerIdiomaSeptimaPantalla(idioma);
        	establecerIdiomaOctavaPantalla(idioma);
        	establecerIdiomaNovenaPantalla(idioma);
        	establecerIdiomaDecimaPantalla(idioma);
        	establecerIdiomaOncePantalla(idioma);
        	establecerIdiomaDocePantalla(idioma);
        	//establecerIdiomaTrecePantalla(idioma);
        } else if (e.getSource()== aleman && idioma != 2) {
        	idioma = 2;
        	cambiarToolTipText ();
        	cambiarIdiomaPerfil ();
        	cambiarValorJLabel();
        	cambiarAparienciaBotonSonido();
        	establecerIdiomaTexto(idioma);
        	establecerIdiomaTerceraPantalla (idioma);
        	establecerIdiomaEtiquetaPreferencias (idioma);
        	editarBotonProponerPlanes (idioma);
        	establecerIdiomaCuartaPantalla(idioma);
        	establecerIdiomaQuintaSextaPantalla(idioma,numeroPantalla);
        	establecerIdiomaSeptimaPantalla(idioma);
        	establecerIdiomaOctavaPantalla(idioma);
        	establecerIdiomaNovenaPantalla(idioma);
        	establecerIdiomaDecimaPantalla(idioma);
        	establecerIdiomaOncePantalla(idioma);
        	establecerIdiomaDocePantalla(idioma);
        	//establecerIdiomaTrecePantalla(idioma);
        } else if (e.getSource()== frances && idioma != 3) {
        	idioma = 3;
        	cambiarToolTipText ();
        	cambiarIdiomaPerfil ();
        	cambiarValorJLabel();
        	cambiarAparienciaBotonSonido();
        	establecerIdiomaTexto(idioma);
        	establecerIdiomaTerceraPantalla (idioma);
        	establecerIdiomaEtiquetaPreferencias (idioma);
        	editarBotonProponerPlanes (idioma);
        	establecerIdiomaCuartaPantalla(idioma);
        	establecerIdiomaQuintaSextaPantalla(idioma,numeroPantalla);
        	establecerIdiomaSeptimaPantalla(idioma);
        	establecerIdiomaOctavaPantalla(idioma);
        	establecerIdiomaNovenaPantalla(idioma);
        	establecerIdiomaDecimaPantalla(idioma);
        	establecerIdiomaOncePantalla(idioma);
        	establecerIdiomaDocePantalla(idioma);
        	//establecerIdiomaTrecePantalla(idioma);
        } else if (e.getSource() == menu.getPerfil()) {
        	int seleccion = menu.getPerfil().getSelectedIndex();
        	if (seleccion != 0) {
        		numeroPantalla = 2;
        		menu.getPerfil().setVisible(false);
        		tituloPrincipal.setVisible(false);
        		visualizarPantallaSegunda();
        	}
        }
        else if (e.getSource()==preferencias) {
        	numeroPantalla = 3;
        	ocultarPantallaSegunda();
        	visualizarTerceraPantalla();
        }
        else if (e.getSource()==botonActividades1) {
        	numeroPantalla = 4;
        	ocultarTerceraPantalla();
        	visualizarCuartaPantalla();
        }
        else if (e.getSource() == botonDeportes1 || e.getSource() == botonDeportes2) {
        	if (e.getSource() == botonDeportes1)
        		numeroPantalla = 5;
        	else
        		numeroPantalla = 6;
        	ocultarCuartaPantalla();
        	visualizarQuintaSextaantalla(idioma);
        } else if (e.getSource()==atras) {
        	irPantallaAnterior(numeroPantalla);
        } else if (e.getSource() == botonDeportes3) {
        	numeroPantalla = 7;
        	ocultarCuartaPantalla();
        	visualizarSeptimaPantalla();
        } else if (e.getSource() == botonDeportes4) {
        	numeroPantalla = 8;
        	ocultarCuartaPantalla();
        	visualizarOctavaPantalla();
        }	
        else if (e.getSource() == botonDeportes5) {
        	numeroPantalla = 9;
        	ocultarCuartaPantalla();
        	visualizarNovenaPantalla();
        } else if (e.getSource() == botonDeportes6) {
        	numeroPantalla = 10;
        	ocultarCuartaPantalla();
        	visualizarDecimaPantalla();
        } else if (e.getSource() == botonActividades2) {
        	numeroPantalla = 11;
        	ocultarTerceraPantalla();
        	visualizarOncePantalla();
        } else if (e.getSource() == cine) {
        	numeroPantalla = 12;
        	ocultarOncePantalla();
        	visualizarDocePantalla();
        	pantalla = 1;
        	comprobarVisibilidadBotonesCine(pantalla);
        } else if (e.getSource() == primera) {
        	pantalla = 1;
        	comprobarVisibilidadBotonesCine(pantalla);
        	
        } else if (e.getSource() == segunda) {
        	pantalla = 2;
        	comprobarVisibilidadBotonesCine(pantalla);
        } else if (e.getSource() == tercera) {
        	pantalla = 3;
        	comprobarVisibilidadBotonesCine(pantalla);
        } else if (e.getSource() == cuarta) {
        	pantalla = 4;
        	comprobarVisibilidadBotonesCine(pantalla);
        } else if (e.getSource() == Alcampo) {
        	try {
        		Cartelera cartelera = new Cartelera("Alcampo");
        		pelicula = cartelera.getCartelera();
        		ocultarDocePantalla();
        		numeroPantalla = 13;
        	} catch (Exception e1) {}
        } else if (e.getSource() == Meridiano) {
        	try {
        		Cartelera cartelera = new Cartelera("Meridiano");
        		pelicula = cartelera.getCartelera();
        		ocultarDocePantalla();
        		numeroPantalla = 13;
        	} catch (Exception e1) {}
        } else if (e.getSource() == LaOrotava) {
        	try {
        		Cartelera cartelera = new Cartelera("La Orotava");
        		pelicula = cartelera.getCartelera();
        		ocultarDocePantalla();
        		numeroPantalla = 13;
        	} catch (Exception e1) {}
        } else if (e.getSource() == Renoir) {
        	try {
        		Cartelera cartelera = new Cartelera("Renoir");
        		pelicula = cartelera.getCartelera();
        		ocultarDocePantalla();
        		numeroPantalla = 13;
        	} catch (Exception e1) {}
        } else if (e.getSource() == ZentralCenter) {
        	try {
        		Cartelera cartelera = new Cartelera("Zentral Center");
        		pelicula = cartelera.getCartelera();
        		ocultarDocePantalla();
        		numeroPantalla = 13;
        	} catch (Exception e1) {}
        } else if (e.getSource() == PuntaLarga) {
        	try {
        		Cartelera cartelera = new Cartelera("Punta Larga");
        		pelicula = cartelera.getCartelera();
        		ocultarDocePantalla();
        		numeroPantalla = 13;
        	} catch (Exception e1) {}
        } else if (e.getSource() == GranSur) {
        	try {
        		Cartelera cartelera = new Cartelera("Gran Sur");
        		pelicula = cartelera.getCartelera();
        		ocultarDocePantalla();
        		numeroPantalla = 13;
        	} catch (Exception e1) {}
        }
        
        else if (e.getSource()==sonido && musica.compareTo("on") == 0) {
        	musica = "of";
        	cambiarAparienciaBotonSonido();
        	try {
				cambiarBotonSonido();
			} catch (LineUnavailableException | IOException | UnsupportedAudioFileException e1) {
				e1.printStackTrace();
			}
        }
        else if ((e.getSource()==sonido && musica.compareTo("of") == 0)) {
        	musica = "on";
        	cambiarAparienciaBotonSonido();
        	try {
				cambiarBotonSonido();
			} catch (LineUnavailableException | IOException | UnsupportedAudioFileException e1) {
				e1.printStackTrace();
			}
        }
        repaint();
    }
	
	public void paintComponent (Graphics g){
		Dimension tamanio = getSize();
		ImageIcon imagenFondo = new ImageIcon(getClass().getResource("/imagenes/tenerifefondo.jpg"));
		g.drawImage(imagenFondo.getImage(),0,0,tamanio.width, tamanio.height, null);
		idiomas.setBounds(menu.getAnchuraVentana()-230, 0,144,43);
		this.add(idiomas);
		if (numeroPantalla == 1) {
			menu.colocarPerfil();
			tituloPrincipal.setBounds((int)(menu.getAnchuraVentana() / 2.49),(int)(menu.getAlturaVentana() / 3.5), 300,100);
			cambiarTamannoTexto(menu.getAnchuraVentana(), menu.getAlturaVentana());
			tituloPrincipal.setFont(new java.awt.Font("Tahoma", tamannoinicialX, tamannoinicialY));
			this.add(tituloPrincipal);
		}
		else if (numeroPantalla == 2){
			preferencias.setBounds((int)(menu.getAnchuraVentana() / 5.5),(int)(menu.getAlturaVentana() / 3.2), 119,30);
			this.add(preferencias);
			g.drawImage(imagenprecio.getImage(),(int)(menu.getAnchuraVentana()/2.5),(int)(menu.getAlturaVentana() / 3.5)-80,imagenprecio.getIconWidth() / 2, imagenprecio.getIconHeight() / 2, null);
			precio.setBounds((int)(menu.getAnchuraVentana() / 2.5),(int)(menu.getAlturaVentana() / 3.2),119,30);
			this.add(precio);	
			g.drawImage(imagentiempo.getImage(),(int)(menu.getAnchuraVentana()/1.64),(int)(menu.getAlturaVentana() / 3.5)-80,imagenprecio.getIconWidth() / 2, imagenprecio.getIconHeight() / 2, null);
			tiempo.setBounds((int)(menu.getAnchuraVentana() / 1.64),(int)(menu.getAlturaVentana() / 3.2), 119,30);
			this.add(tiempo);
			g.drawImage(imagenvehiculo.getImage(),(int)(menu.getAnchuraVentana()/1.25),(int)(menu.getAlturaVentana() / 3.5)-80,imagenprecio.getIconWidth() / 2, imagenprecio.getIconHeight() / 2, null);
			vehiculo.setBounds((int)(menu.getAnchuraVentana() / 1.25),(int)(menu.getAlturaVentana() / 3.2), 119,30);
			this.add(vehiculo);
			g.drawImage(imagenacompannantes.getImage(),(int)(menu.getAnchuraVentana()/3.4),(int)(menu.getAlturaVentana() / 1.8)-80,(imagenprecio.getIconWidth() / 2)+55, imagenprecio.getIconHeight() / 2, null);
			acompannantes.setBounds((int)(menu.getAnchuraVentana() / 3.4),(int)(menu.getAlturaVentana() /  1.7), 175,30);
			this.add(acompannantes);	
			g.drawImage(imagenAlojamiento.getImage(),(int)(menu.getAnchuraVentana()/1.95),(int)(menu.getAlturaVentana() / 1.8)-80,(imagenprecio.getIconWidth() / 2)+55, imagenprecio.getIconHeight() / 2, null);
			alojamiento.setBounds((int)(menu.getAnchuraVentana() / 1.95),(int)(menu.getAlturaVentana() / 1.72), 175,30);
			this.add(alojamiento);
			g.drawImage(imagenVisitasTenerife.getImage(),(int)(menu.getAnchuraVentana()/1.37),(int)(menu.getAlturaVentana() / 1.8)-80,(imagenprecio.getIconWidth() / 2)+55, imagenprecio.getIconHeight() / 2, null);
			visitasTenerife.setBounds((int)(menu.getAnchuraVentana() / 1.37),(int)(menu.getAlturaVentana() / 1.7), 175,30);
			this.add(visitasTenerife);
			editarBotonProponerPlanes(idioma);
			proponerPlanes.setBounds((int)(menu.getAnchuraVentana() / 2.4),(int)(menu.getAlturaVentana() / 1.25),180,30);
			this.add(proponerPlanes);
		}
		else if (numeroPantalla == 3) {
			titulo.setBounds((int)(menu.getAnchuraVentana() / 2.1),(int)(menu.getAlturaVentana() / 4.5), 300,100);
			if (idioma == 0) {
			   botonActividades1.setBounds((int)(menu.getAnchuraVentana()/14.2),(int)(menu.getAlturaVentana()/2.5),180,30);
			   botonActividades2.setBounds((int)(menu.getAnchuraVentana()/3.2),(int)(menu.getAlturaVentana()/2.5),291,30);
			   botonActividades3.setBounds((int)(menu.getAnchuraVentana()/1.7),(int)(menu.getAlturaVentana()/2.5),142,30);
			   botonActividades4.setBounds((int)(menu.getAnchuraVentana()/1.2),(int)(menu.getAlturaVentana()/2.5),160,30);
