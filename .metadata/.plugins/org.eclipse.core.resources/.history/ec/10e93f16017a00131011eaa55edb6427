							etiquetas.get(i).municipio.setBounds(((int)(menu.getAnchuraVentana()/12) + foto.get(0).getIconWidth() / 2),(int)(menu.getAlturaVentana()/4.5),300,300);
							etiquetas.get(i).municipio.setForeground(Color.GREEN);
							etiquetas.get(i).telefono.setBounds(((int)(menu.getAnchuraVentana()/12) + foto.get(0).getIconWidth() / 2),(int)(menu.getAlturaVentana()/4),300,300);
							etiquetas.get(i).telefono.setForeground(Color.RED);
							etiquetas.get(i).precios.setBounds(((int)(menu.getAnchuraVentana()/12) + foto.get(0).getIconWidth() / 2),(int)(menu.getAlturaVentana()/3.6),300,300);
							etiquetas.get(i).precios.setForeground(Color.ORANGE);
							etiquetas.get(i).diaBarato.setBounds(((int)(menu.getAnchuraVentana()/12) + foto.get(0).getIconWidth() / 2),(int)(menu.getAlturaVentana()/3.3),300,300);
							etiquetas.get(i).diaBarato.setForeground(Color.YELLOW);
							this.add(Renoir);
							break;
						}
						case 5: {
							g.drawImage(foto.get(i).getImage(),((int)(menu.getAnchuraVentana()/12) + foto.get(0).getIconWidth() / 2) + 300,(int)(menu.getAlturaVentana()/3),(foto.get(1).getIconWidth() / 2) - ((foto.get(1).getIconWidth() / 2) - (foto.get(0).getIconWidth() / 2)), (foto.get(1).getIconHeight() / 2) - ((foto.get(1).getIconHeight() / 2) - (foto.get(0).getIconHeight() / 2)), null);
							PuntaLarga.setBounds((((int)(menu.getAnchuraVentana()/12) + foto.get(0).getIconWidth() / 2) + 300) + (((foto.get(0).getIconHeight() / 2) - ((foto.get(1).getIconHeight() / 2) - (foto.get(1).getIconHeight() / 2)))/2),(int)(menu.getAlturaVentana()/1.7),94,30);
							etiquetas.get(i).direccion.setBounds(((int)(((menu.getAnchuraVentana()/12) + foto.get(0).getIconWidth()/2)+300) + ((foto.get(1).getIconWidth() / 2) - ((foto.get(1).getIconWidth() / 2) - (foto.get(0).getIconWidth() / 2)))),(int)(menu.getAlturaVentana()/5),400,300);
							etiquetas.get(i).direccion.setForeground(Color.BLUE);
							etiquetas.get(i).municipio.setBounds(((int)(((menu.getAnchuraVentana()/12) + foto.get(0).getIconWidth()/2)+300) + ((foto.get(1).getIconWidth() / 2) - ((foto.get(1).getIconWidth() / 2) - (foto.get(0).getIconWidth() / 2)))),(int)(menu.getAlturaVentana()/4.5),300,300);
							etiquetas.get(i).municipio.setForeground(Color.GREEN);
							etiquetas.get(i).telefono.setBounds(((int)(((menu.getAnchuraVentana()/12) + foto.get(0).getIconWidth()/2)+300) + ((foto.get(1).getIconWidth() / 2) - ((foto.get(1).getIconWidth() / 2) - (foto.get(0).getIconWidth() / 2)))),(int)(menu.getAlturaVentana()/4),300,300);
							etiquetas.get(i).telefono.setForeground(Color.RED);
							etiquetas.get(i).precios.setBounds(((int)(((menu.getAnchuraVentana()/12) + foto.get(0).getIconWidth()/2)+300) + ((foto.get(1).getIconWidth() / 2) - ((foto.get(1).getIconWidth() / 2) - (foto.get(0).getIconWidth() / 2)))),(int)(menu.getAlturaVentana()/3.6),300,300);
							etiquetas.get(i).precios.setForeground(Color.ORANGE);
							etiquetas.get(i).diaBarato.setBounds(((int)(((menu.getAnchuraVentana()/12) + foto.get(0).getIconWidth()/2)+300) + ((foto.get(1).getIconWidth() / 2) - ((foto.get(1).getIconWidth() / 2) - (foto.get(0).getIconWidth() / 2)))),(int)(menu.getAlturaVentana()/3.3),400,300);
							etiquetas.get(i).diaBarato.setForeground(Color.YELLOW);
							this.add(PuntaLarga);
							break;
						}
					}
					this.add(etiquetas.get(i).direccion);
					this.add(etiquetas.get(i).municipio);
					this.add(etiquetas.get(i).telefono);
					this.add(etiquetas.get(i).precios);
					this.add(etiquetas.get(i).diaBarato);
				}
				}
				else {
					g.drawImage(foto.get(6).getImage(),(int)(menu.getAnchuraVentana()/2.6),(int)(menu.getAlturaVentana()/3),foto.get(0).getIconWidth() / 2, foto.get(0).getIconHeight() / 2, null);
					GranSur.setBounds((int)(((int)(menu.getAnchuraVentana()/2.6) + foto.get(0).getIconWidth() / 2)/1.3),(int)(menu.getAlturaVentana()/1.7),94,30);
					etiquetas.get(6).direccion.setBounds(((int)(menu.getAnchuraVentana()/2.6) + foto.get(0).getIconWidth() / 2),(int)(menu.getAlturaVentana()/5),300,300);
					etiquetas.get(6).direccion.setForeground(Color.BLUE);
					etiquetas.get(6).municipio.setBounds(((int)(menu.getAnchuraVentana()/2.6) + foto.get(0).getIconWidth() / 2),(int)(menu.getAlturaVentana()/4.5),300,300);
					etiquetas.get(6).municipio.setForeground(Color.GREEN);
					etiquetas.get(6).telefono.setBounds(((int)(menu.getAnchuraVentana()/2.6) + foto.get(0).getIconWidth() / 2),(int)(menu.getAlturaVentana()/4),300,300);
					etiquetas.get(6).telefono.setForeground(Color.RED);
					etiquetas.get(6).precios.setBounds(((int)(menu.getAnchuraVentana()/2.6) + foto.get(0).getIconWidth() / 2),(int)(menu.getAlturaVentana()/3.6),300,300);
					etiquetas.get(6).precios.setForeground(Color.ORANGE);
					etiquetas.get(6).diaBarato.setBounds(((int)(menu.getAnchuraVentana()/2.6) + foto.get(0).getIconWidth() / 2),(int)(menu.getAlturaVentana()/3.3),500,300);
					etiquetas.get(6).diaBarato.setForeground(Color.YELLOW);
					this.add(GranSur);
					this.add(etiquetas.get(6).direccion);
					this.add(etiquetas.get(6).municipio);
					this.add(etiquetas.get(6).telefono);
					this.add(etiquetas.get(6).precios);
					this.add(etiquetas.get(6).diaBarato);
			}
		}
		
		/*Cine cine;
		ArrayList <Cartelera> cartel = new ArrayList<Cartelera>(); */		
		
		
		if (numeroPantalla > 2) {
			atras.setVisible(true);
			atras.setBounds(0,30,70,70);
			this.add(atras);
		}
		
		espannol.setBounds(menu.getAnchuraVentana() -210,30,100,70);
		this.add(espannol);
		ingles.setBounds(menu.getAnchuraVentana() -110,30,100,70);
		this.add(ingles);
		aleman.setBounds(menu.getAnchuraVentana() -310,30,100,70);
		this.add(aleman);
		frances.setBounds(menu.getAnchuraVentana() -410,30,100,70);
		this.add(frances);
		sonido.setBounds(menu.getAnchuraVentana()-80,100,70,70);
		this.add(sonido);
		setOpaque(false);
		super.paintComponent(g);
	}
