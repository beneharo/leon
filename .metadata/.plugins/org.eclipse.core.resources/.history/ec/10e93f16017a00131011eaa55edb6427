		//etiqueta que desea hacer de la tercera pantalla
		public void crearEtiquetaPreferencias(int idioma) {
			titulo = new JLabel();
			Color coloramarillo = new Color(255,255,20);
			titulo.setForeground(coloramarillo);
			titulo.setFont(new java.awt.Font("Tahoma", 12, 20));
			establecerIdiomaEtiquetaPreferencias(idioma);
		}
		
		//idioma de la etiqueta de la tercera pantalla (Que desea hacer)
		public void establecerIdiomaEtiquetaPreferencias (int idioma) {
			if (idioma == 0)
				titulo.setText("nnQUE DESEA HACER? ");
			else if (idioma == 1) {
				titulo.setText("WHAT DO YOU WANT? ");
			}
			else if (idioma == 2) {
				titulo.setText("WAS WOLLEN SIE? ");
			} else if (idioma == 3) {
				titulo.setText("QUE VOULEZ-VOUS? ");
			}
		}
	
