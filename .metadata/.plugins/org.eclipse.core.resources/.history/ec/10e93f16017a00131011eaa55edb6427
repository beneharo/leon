	public Pantallas (int anchura, int altura, Dimension dimensionesMaximas) throws LineUnavailableException, IOException, UnsupportedAudioFileException{
		anchuraanterior = anchura;
		alturaanterior = altura;
		CrearBotonesIdiomas();
		crearJlabel();
		CrearBotonMusica();
		menu.getPerfil().addActionListener(this);
		this.add(menu.getPerfil());
		sonido(musica);
		crearBotonAtras();
		crearEtiquetasTitulo();
		crearSegundaPantalla(idioma);
		ocultarPantallaSegunda();
		crearTerceraPantalla(idioma);
		ocultarTerceraPantalla();
		crearCuartaPantalla(idioma);
		ocultarCuartaPantalla();
		crearQuintaSextaPantalla(idioma,5);
		ocultarQuintaSextaPantalla(5);
		crearSeptimaPantalla(idioma);
		ocultarSeptimaPantalla();
		crearOctavaPantalla(idioma);
		ocultarOctavaPantalla();
		crearNovenaPantalla(idioma);
		ocultarNovenaPantalla();
		crearDecimaPantalla(idioma);
		ocultarDecimaPantalla();
		crearOncePantalla(idioma);
		ocultarOncePantalla();
		crearDocePantalla(idioma);
		ocultarDocePantalla();
		crearTrecePantalla(idioma);
		ocultarTrecePantalla();
	}
	
	// funcinnn para activar o desactivar la mnnsica en la aplicacinnn
	
	public void sonido (String musica) throws LineUnavailableException, IOException, UnsupportedAudioFileException {
		if (musica.compareTo("on") == 0) {
			sound = AudioSystem.getClip();
			sound.open(AudioSystem.getAudioInputStream(getClass().getResourceAsStream("/sonidos/musica.wav")));
			sound.start();
			sound.loop(Clip.LOOP_CONTINUOUSLY);
		} else {
			sound.stop();
		}
	}
	
	//funcion para crear la etiqueta de tnntulo en la aplicacinnn con las caracternnsticas predeterminadas
	
	public void crearEtiquetasTitulo() {
		tituloPrincipal = new JLabel("Planning Tenerife Route");
		titulo = new JLabel("Planning Tenerife Route");
		Color coloramarillo = new Color(255,255,0);
		tituloPrincipal.setForeground(coloramarillo);
		tituloPrincipal.setFont(new java.awt.Font("Tahoma", tamannoinicialX, tamannoinicialY));
		titulo.setForeground(coloramarillo);
		titulo.setFont(new java.awt.Font("Tahoma", tamannoinicialX, tamannoinicialY));
	}
	
	//funcion para crear la etiqueta de idiomas en la aplicacinnn con las caracternnsticas predeterminadas
	
	public void crearJlabel () {
		idiomas = new JLabel("Idiomas");
		Color colorverde = new Color(0,255,0);
		idiomas.setForeground(colorverde); 
	}
	
	//funcion para crear el boton de vuelta a la vista anterior
	
	public void crearBotonAtras () {
		atras.setOpaque(true);
		atras.setBorder(null);
		Color c = UIManager.getLookAndFeel().getDefaults().getColor( "Panel.background");
		atras.setBackground(new Color(c.getRed(), c.getGreen(), c.getBlue()));
		atras.setIcon(flechaatras);
		atras.addActionListener(this);
	}
	
	//funcion para volver a la vista anterior
	
	public void irPantallaAnterior (int numPantalla) {
		
		switch (numPantalla) {
			case 3: {
				numeroPantalla = 2;
				ocultarTerceraPantalla();
				visualizarPantallaSegunda();
				atras.setVisible(false);
				break;
			}
			case 4: {
				numeroPantalla = 3;
				ocultarCuartaPantalla();
				visualizarTerceraPantalla();
				break;
			}
			case 5: {
				numeroPantalla = 4;
				ocultarQuintaSextaPantalla(numPantalla);
				visualizarCuartaPantalla();
				break;
			}
			case 6: {
				numeroPantalla = 4;
				ocultarQuintaSextaPantalla(numPantalla);
				visualizarCuartaPantalla();
				break;
			}
			
			case 7: {
				numeroPantalla = 4;
				ocultarSeptimaPantalla();
				visualizarCuartaPantalla();
				break;
			}
			case 8: {
				numeroPantalla = 4;
				ocultarOctavaPantalla();
				visualizarCuartaPantalla();
				break;
			}
			case 9: {
				numeroPantalla = 4;
				ocultarNovenaPantalla();
				visualizarCuartaPantalla();
				break;
			}
			case 10: {
				numeroPantalla = 4;
				ocultarDecimaPantalla();
				visualizarCuartaPantalla();
				break;
			}
			case 11: {
				numeroPantalla = 3;
				ocultarOncePantalla();
				visualizarTerceraPantalla();
				break;
			}
			case 12: {
				numeroPantalla = 11;
				ocultarDocePantalla();
				visualizarOncePantalla();
				break;
			}
			case 13 : {
				numeroPantalla = 12;
				ocultarTrecePantalla();
				visualizarDocePantalla();
				comprobarVisibilidadBotonesCine(pantalla);
				break;
			}
		}
	}
	
	//funcion para crear los botones de la mnnsica en la aplicacinnn con sus caracternnsticas predeterminadas
	
	public void CrearBotonMusica () {
		sonido.setOpaque(true);
		sonido.setBorder(null);
		Color c = UIManager.getLookAndFeel().getDefaults().getColor( "Panel.background");
		sonido.setToolTipText("Musica Activada");
		sonido.setBackground(new Color(c.getRed(), c.getGreen(), c.getBlue()));
		sonido.setIcon(botonon);
		sonido.addActionListener(this);
	}
	
	//funcion para crear los botones de idiomas en la aplicacinnn con sus caracternnsticas predeterminadas
	
	public void CrearBotonesIdiomas() {
		ImageIcon imagenespanna = new ImageIcon(getClass().getResource("imagenes\banderaespa√±a.jpg"));
		ImageIcon imageninglesa = new ImageIcon(getClass().getResource("imagenes\banderainglesa.jpg"));
		ImageIcon imagenalemana = new ImageIcon(getClass().getResource("imagenes\banderaalemana.jpg"));
		ImageIcon imagenfrancesa = new ImageIcon(getClass().getResource("imagenes\banderafrancesa.jpg"));
		espannol.setOpaque(true);
		ingles.setOpaque(true);
		aleman.setOpaque(true);
		frances.setOpaque(true);
	    espannol.setBorder(null);
		ingles.setBorder(null); 
		aleman.setBorder(null);
		frances.setBorder(null);
	    Color c = UIManager.getLookAndFeel().getDefaults().getColor( "Panel.background");
	    espannol.setToolTipText("Espannol");
	    ingles.setToolTipText("Inglnns");
	    aleman.setToolTipText("Alemnnn");
	    frances.setToolTipText("Francnns");
		espannol.setBackground(new Color(c.getRed(), c.getGreen(), c.getBlue()));
		ingles.setBackground(new Color(c.getRed(), c.getGreen(), c.getBlue())); 
		aleman.setBackground(new Color(c.getRed(), c.getGreen(), c.getBlue()));
		frances.setBackground(new Color(c.getRed(), c.getGreen(), c.getBlue()));
		espannol.setIcon(imagenespanna);
		ingles.setIcon(imageninglesa);
		aleman.setIcon(imagenalemana);
		frances.setIcon(imagenfrancesa);
		espannol.addActionListener(this);
		ingles.addActionListener(this);
		aleman.addActionListener(this);
		frances.addActionListener(this);
	}
	
	// funcinnn que cambia el botnnn de sonido y el tooltiptext segnnn lo que desee el usuario (quitar la mnnsica o poner la mnnsica)
	
	public void cambiarAparienciaBotonSonido() {
		if (musica.compareTo("on") == 0 && idioma == 0) {
			sonido.setToolTipText("Musica Activada");
			sonido.setIcon(botonon);
		} else if (musica.compareTo("on") == 0 && idioma == 1) {
			sonido.setToolTipText("Music On");
			sonido.setIcon(botonon);
		} else if (musica.compareTo("on") == 0 && idioma == 2) {
			sonido.setToolTipText("Musik aktivierte");
			sonido.setIcon(botonon);
		} else if (musica.compareTo("on") == 0 && idioma == 3) {
			sonido.setToolTipText("musique activnne");
			sonido.setIcon(botonon);
		} else if (musica.compareTo("of") == 0 && idioma == 0) {
			sonido.setToolTipText("Musica Desac*tivada");
			sonido.setIcon(botonof);
		} else if (musica.compareTo("of") == 0 && idioma == 1){
			sonido.setToolTipText("Music Of");
			sonido.setIcon(botonof);
		} else if ((musica.compareTo("of") == 0 && idioma == 2)) {
			sonido.setToolTipText("Musik aus");
			sonido.setIcon(botonof);
		} else if ((musica.compareTo("of") == 0 && idioma == 3)) {
			sonido.setToolTipText("musique off");
			sonido.setIcon(botonof);
		}
	}
	
	public void cambiarBotonSonido() throws LineUnavailableException, IOException, UnsupportedAudioFileException {
		sonido(musica);
	}
	
	// funcinnn que cambia el idioma del JcomboBox de seleccion de perfil segnnn el idioma que haya seleccionado el usuario
	
	public void cambiarIdiomaPerfil () {
		menu.setPerfil(idioma,perfiles);
		this.add(menu.getPerfil());
	}
	
	// funcinnn que cambia el tooltiptext de los botones segnnn el idioma que haya seleccionado el usuario
	
	public void cambiarToolTipText () {
		 if (idioma == 0) {
		       espannol.setToolTipText("Espannol");
		       ingles.setToolTipText("Inglnns");
		       aleman.setToolTipText("Alemnnn");
		       frances.setToolTipText("Francnns");
		    }
		    else if (idioma == 1){
		    	espannol.setToolTipText("Spanish");
			    ingles.setToolTipText("English");
			    aleman.setToolTipText("Deutsch");
			    frances.setToolTipText("French");
		    } else if (idioma == 2) {
		    	espannol.setToolTipText("Spanisch");
			    ingles.setToolTipText("Englisch");
			    aleman.setToolTipText("Deutsch");
			    frances.setToolTipText("Franznnsisch");
		    } else if (idioma == 3) {
		    	espannol.setToolTipText("Espagnol");
			    ingles.setToolTipText("Anglais");
			    aleman.setToolTipText("Allemand");
			    frances.setToolTipText("Frannnais");
		    }
	}
	
	// funcinnn que cambia la etiqueta de Idioma segnnn el idioma seleccionado por el usuario
	
	public void cambiarValorJLabel () {
		if (idioma == 0)
	       idiomas.setText("Idiomas");
		else if (idioma == 1)
		   idiomas.setText("Languages");
		else if (idioma == 2)
			idiomas.setText("Sprache");
		else if (idioma == 3)
			idiomas.setText("Langues");
	}
	
	// funcinnn que modifica el tamanno y el ancho de la letra de la etiqueta titulo de la aplicacinnn
	
	public void cambiarTamannoTexto (int anchura, int altura) {
		if (anchuraanterior < anchura && tamannoinicialX < 24) { 
				tamannoinicialX  = tamannoinicialX + 1; 
				tamannoinicialY = tamannoinicialY + 1;
				anchuraanterior = anchura;
		} else if (alturaanterior < altura && tamannoinicialX < 24) {
				tamannoinicialX  = tamannoinicialX + 1; 
				tamannoinicialY = tamannoinicialY + 1;
				alturaanterior = altura;
		} else if (anchuraanterior > anchura && tamannoinicialX > 12) { 
				tamannoinicialX  = tamannoinicialX - 1; 
				tamannoinicialY = tamannoinicialY - 1;
				anchuraanterior = anchura;
		} else if (alturaanterior > altura && tamannoinicialX > 12) {
				tamannoinicialX  = tamannoinicialX - 1; 
				tamannoinicialY = tamannoinicialY - 1;
				alturaanterior = altura;
		}
	}
	
	// funcion que crea los botones de las diferentes opciones de la segunda pantalla
	
	public void crearSegundaPantalla(int idioma) {
		proponerPlanes = new JButton("PROPONER UN PLAN");
		Color c = UIManager.getLookAndFeel().getDefaults().getColor( "Panel.background");
		//imagenpreferencias = new ImageIcon(getClass().getResource("/imagenes/preferencias.jpg")); 
		imagenprecio = new ImageIcon(getClass().getResource("\\imagenes\\euros.jpg")); 
		imagentiempo = new ImageIcon(getClass().getResource("\\imagenes\\tiempo.jpg")); 
		imagenvehiculo = new ImageIcon(getClass().getResource("\\imagenes\\vehiculo.png"));  
		imagenacompannantes = new ImageIcon(getClass().getResource("\\imagenes\\acompannantes.jpg")); 
		imagenAlojamiento = new ImageIcon(getClass().getResource("\\imagenes\\casa.jpg")); 
		imagenVisitasTenerife = new ImageIcon(getClass().getResource("\\imagenes\\visitasTenerife.png"));  
		preferencias.setText("Preferencias");
		preferencias.setHorizontalTextPosition(SwingConstants.CENTER);
		preferencias.setVerticalTextPosition(SwingConstants.CENTER);
		preferencias.addActionListener(this); 
		precio.setText("Precio");
		precio.setHorizontalTextPosition(SwingConstants.CENTER);
		precio.setVerticalTextPosition(SwingConstants.CENTER); 
		precio.addActionListener(this); 
		tiempo.setText("Tiempo");
		tiempo.setHorizontalTextPosition(SwingConstants.CENTER);
		tiempo.setVerticalTextPosition(SwingConstants.CENTER); 
		tiempo.addActionListener(this);
		vehiculo.setText("Vehiculo");
		vehiculo.setHorizontalTextPosition(SwingConstants.CENTER);
		vehiculo.setVerticalTextPosition(SwingConstants.CENTER); 
		vehiculo.addActionListener(this);
		acompannantes.setText("Acompannantes");
		acompannantes.setHorizontalTextPosition(SwingConstants.CENTER);
		acompannantes.setVerticalTextPosition(SwingConstants.CENTER); 
		acompannantes.addActionListener(this);
		alojamiento.setText("Alojamiento");
		alojamiento.setHorizontalTextPosition(SwingConstants.CENTER);
		alojamiento.setVerticalTextPosition(SwingConstants.CENTER); 
		alojamiento.addActionListener(this);
		visitasTenerife.setText("Visitas Tenerife");
		visitasTenerife.setHorizontalTextPosition(SwingConstants.CENTER);
		visitasTenerife.setVerticalTextPosition(SwingConstants.CENTER); 
		visitasTenerife.addActionListener(this);
		establecerIdiomaTexto(idioma);
		editarBotonProponerPlanes (idioma);
	}
	
	// para establecer el idioma del texto del boton proponer planes
		public void editarBotonProponerPlanes (int idioma) {
			if (idioma == 0) 
				proponerPlanes.setText("PROPONER PLANES");
			else if (idioma == 1) 
				proponerPlanes.setText("PROPOSE PLAN");
			else if (idioma == 2)
				proponerPlanes.setText("SCHLAGEN PLAN");
			else 
				proponerPlanes.setText("PROPOSER UN PLAN");
		}
	
	// funcion que cambia el texto del boton y el setToolTipText segnnn el idioma seleccionado
	
	public void establecerIdiomaTexto (int idioma) {
		if (idioma == 0) {
			textoPreferencias = "Preferencias";
			textoPrecio = "Precio";
			textoTiempo = "Tiempo";
			textoVehiculo = "Vehnnculo";
			textoAcompannantes = "Acompannantes";
			textoAlojamiento = "Alojamiento";
			textoVisitasTenerife = "Visitas Tenerife";
		} else if (idioma == 1) {
			textoPreferencias = "Preferences";
			textoPrecio = "Price";
			textoTiempo = "Time";
			textoVehiculo = "Vehicle";
			textoAcompannantes = "Companions";
			textoAlojamiento = "Accommodation";
			textoVisitasTenerife = "Visits Tenerife";
		} else if (idioma == 2) {
			textoPreferencias = "Einstellungen";
			textoPrecio = "Preis";
			textoTiempo = "Zeit";
			textoVehiculo = "Fahrzeug";
			textoAcompannantes = "Begleiters";
			textoAlojamiento = "Unterkunft";
			textoVisitasTenerife = "Besuche Teneriffa";
		} else if (idioma == 3) {
			textoPreferencias = "Prnnfnnrences";
			textoPrecio = "Prix";
			textoTiempo = "Heure";
			textoVehiculo = "Vnnhicule";
			textoAcompannantes = "Compagnons";
			textoAlojamiento = "Hnnbergement";
			textoVisitasTenerife = "Visites Tenerife";
		}
		preferencias.setToolTipText(textoPreferencias);
		preferencias.setText(textoPreferencias);
		precio.setToolTipText(textoPrecio);
		precio.setText(textoPrecio);
		tiempo.setToolTipText(textoTiempo);
		tiempo.setText(textoTiempo);
		vehiculo.setToolTipText(textoVehiculo);
		vehiculo.setText(textoVehiculo);
		acompannantes.setToolTipText(textoAcompannantes);
		acompannantes.setText(textoAcompannantes);
		alojamiento.setToolTipText(textoAlojamiento);
		alojamiento.setText(textoAlojamiento);
		visitasTenerife.setToolTipText(textoVisitasTenerife);
		visitasTenerife.setText(textoVisitasTenerife);
	}
	
	
	// funcion que oculta los elementos visuales que no se repiten en la segunda pantalla
	public void ocultarPantallaSegunda () {
		preferencias.setVisible(false); 
		precio.setVisible(false); 
		tiempo.setVisible(false);
		vehiculo.setVisible(false);
		acompannantes.setVisible(false);
		alojamiento.setVisible(false);
		visitasTenerife.setVisible(false);
		proponerPlanes.setVisible(false);
	}
	
	// funcion que activa la visualizacion de los elementos de la segunda pantalla que no se repiten en las demas
	public void visualizarPantallaSegunda() {
		numeroPantalla = 2;
		preferencias.setVisible(true); 
		precio.setVisible(true); 
		tiempo.setVisible(true);
		vehiculo.setVisible(true);
		acompannantes.setVisible(true);
		alojamiento.setVisible(true);
		visitasTenerife.setVisible(true);
		proponerPlanes.setVisible(true);
	}
	
