	//funcion que crea la Quinta  y sexta pantalla (pantalla de opciones de deportes mayoritarios, y otros deportes)
			public void crearQuintaSextaPantalla(int idioma, int numPantalla) {
				grupoBotones=new ButtonGroup();
				verDeportesMayoritarios1 = new JRadioButton();
			    grupoBotones.add(verDeportesMayoritarios1);
			    jugarDeportesMayoritarios1 =new JRadioButton();       
			    grupoBotones.add(jugarDeportesMayoritarios1);
			    verDeportesMayoritarios2 = new JRadioButton();
			    grupoBotones.add(verDeportesMayoritarios2);
			    jugarDeportesMayoritarios2 =new JRadioButton();       
			    grupoBotones.add(jugarDeportesMayoritarios2);
			    verDeportesMayoritarios3 = new JRadioButton();
			    grupoBotones.add(verDeportesMayoritarios3);
			    jugarDeportesMayoritarios3 =new JRadioButton();       
			    grupoBotones.add(jugarDeportesMayoritarios3);
			    verDeportesMayoritarios4 = new JRadioButton();
			    grupoBotones.add(verDeportesMayoritarios4);
			    jugarDeportesMayoritarios4 =new JRadioButton();       
			    grupoBotones.add(jugarDeportesMayoritarios4);
			    verDeportesMayoritarios5 = new JRadioButton();
			    grupoBotones.add(verDeportesMayoritarios5);
			    jugarDeportesMayoritarios5 =new JRadioButton();       
			    grupoBotones.add(jugarDeportesMayoritarios5);
			    if (numPantalla == 5) {
			    	verDeportesMayoritarios6 = new JRadioButton();
			    	grupoBotones.add(verDeportesMayoritarios6);
			    	jugarDeportesMayoritarios6 =new JRadioButton();       
			    	grupoBotones.add(jugarDeportesMayoritarios6);
			    }
			    establecerIdiomaQuintaSextaPantalla(idioma,numPantalla);
			    verDeportesMayoritarios1.addActionListener(this);
			    jugarDeportesMayoritarios1.addActionListener(this);
			    verDeportesMayoritarios2.addActionListener(this);
			    jugarDeportesMayoritarios2.addActionListener(this);
			    verDeportesMayoritarios3.addActionListener(this);
			    jugarDeportesMayoritarios3.addActionListener(this);
			    verDeportesMayoritarios4.addActionListener(this);
			    jugarDeportesMayoritarios4.addActionListener(this);
			    verDeportesMayoritarios5.addActionListener(this);
			    jugarDeportesMayoritarios5.addActionListener(this);
			    if (numPantalla == 5) {
			    	verDeportesMayoritarios6.addActionListener(this);
			    	jugarDeportesMayoritarios6.addActionListener(this);
			    }
			}
			
			// funcion para ocultar los elementos de la quinta o sexta pantalla
			public void ocultarQuintaSextaPantalla(int numPantalla) {
				verDeportesMayoritarios1.setVisible(false);
				jugarDeportesMayoritarios1.setVisible(false);
				verDeportesMayoritarios2.setVisible(false);
				jugarDeportesMayoritarios2.setVisible(false);
				verDeportesMayoritarios3.setVisible(false);
				jugarDeportesMayoritarios3.setVisible(false);
				verDeportesMayoritarios4.setVisible(false);
				jugarDeportesMayoritarios4.setVisible(false);
				verDeportesMayoritarios5.setVisible(false);
				jugarDeportesMayoritarios5.setVisible(false);
				if (numPantalla == 5) {
					verDeportesMayoritarios6.setVisible(false);
					jugarDeportesMayoritarios6.setVisible(false);
				}
			}
			
			// funcion para hacer visibles los elementos de la quinta o sexta pantalla
			public void visualizarQuintaSextaantalla(int numPantalla) {
				if (numPantalla == 5)
					numeroPantalla = 5;
				else
					numeroPantalla = 6;
				verDeportesMayoritarios1.setVisible(true);
				jugarDeportesMayoritarios1.setVisible(true);
				verDeportesMayoritarios2.setVisible(true);
				jugarDeportesMayoritarios2.setVisible(true);
				verDeportesMayoritarios3.setVisible(true);
				jugarDeportesMayoritarios3.setVisible(true);
				verDeportesMayoritarios4.setVisible(true);
				jugarDeportesMayoritarios4.setVisible(true);
				verDeportesMayoritarios5.setVisible(true);
				jugarDeportesMayoritarios5.setVisible(true);
				if (numPantalla == 5) {
					verDeportesMayoritarios6.setVisible(true);
					jugarDeportesMayoritarios6.setVisible(true);
				}
			}
		
