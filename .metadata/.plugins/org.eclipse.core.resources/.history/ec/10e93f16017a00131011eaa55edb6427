	//funcion que pone el idioma a los elementos de la Octava pantalla
	public void establecerIdiomaOctavaPantalla (int idioma) {
		if (idioma == 0) {
			realizarDeporteAcuatico1.setText("HACER");
			realizarDeporteAcuatico2.setText("HACER");
			realizarDeporteAcuatico3.setText("HACER");
			realizarDeporteAcuatico4.setText("HACER");
		}
		else if (idioma == 1) {
			realizarDeporteAcuatico1.setText("DO");
			realizarDeporteAcuatico2.setText("DO");
			realizarDeporteAcuatico3.setText("DO");
			realizarDeporteAcuatico4.setText("DO");
		} else if (idioma == 2) {
			realizarDeporteAcuatico1.setText("MACHEN");
			realizarDeporteAcuatico2.setText("MACHEN");
			realizarDeporteAcuatico3.setText("MACHEN");
			realizarDeporteAcuatico4.setText("MACHEN");
		} else if (idioma == 3) {
			realizarDeporteAcuatico1.setText("FAIRE");
			realizarDeporteAcuatico2.setText("FAIRE");
			realizarDeporteAcuatico3.setText("FAIRE");
			realizarDeporteAcuatico4.setText("FAIRE");
		}
	}
	
	//funcion que crea la  Novena pantalla (actividades deportivas con animales)
